<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
    <thead>
   　 <th>image</th>
   　<th>title</th>
   　<th>opinion</th>
    </thead>
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
        <td>
         <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
        </td>
          <td><%= link_to user.name,user_path(user.id) %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <tbody>
      <% @books.each do |book| %>
        <tr>
         <td>
          <%= link_to attachment_image_tag(book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg"),user_path(book.user.id) %>
         </td>
          <td><%= link_to book.title,book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>